extends ../layout/index
block contenido
    main.container.mt-5
        h1.text-center.mb-5= pagina


        .row
            .col-md-12
                include ../layout/parcials/testimoniales
                    
            .col-md-12
                h2.text-center Agrega un Testimonial
                if(errores)
                    each error in errores
                        .alert.alert-danger.text-center=error.mensaje

                .row.justify-content-center
                    .col-md-8
                        form(action="/testimoniales", method="POST")
                            .form-group
                                label(for="nombre") Nombre:
                                input(id="nombre", class="form-control", type="text" placeholder="Tu Nombre" name="nombre", value=nombre)
                            .form-group
                                label(for="email") Correo Electr√≥nico:
                                input(id="email", class="form-control", type="text" placeholder="Tu E-mail" name="correo", value=correo)
                            .form-group
                                label(for="mensaje") Mensaje:
                                textarea#mensaje(name="mensaje", class="form-control", rows="3", placeholder="Tu Mensaje")=mensaje
                            input.btn.btn-success.btn-block(type="submit", value="Agregar")